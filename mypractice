int int2bin(int in, char *out)
{
    int i, j, k;
    i = k = 0;
    j = in;

    //计算位数
    while(j)
    {
        j = j / 2;
        i++;
    }

    //拆解位数
    j = in;
    for(int index = 0; index < i; ++index)
    {
        k = j % 2; //求出余数
        j = j / 2; //求出商
        out[i - index - 1] = '0' + k;
    }

    return 0;
}
